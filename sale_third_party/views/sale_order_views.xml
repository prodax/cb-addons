<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_shipping_id" position="after">
                <field name="third_party_order"/>
            </field>
            <div name="button_box" position="inside">
                <button name="action_view_third_party_order"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-pencil-square-o"
                    attrs="{'invisible': [('third_party_order_count', '=', 0)]}">
                    <field name="third_party_order_count" widget="statinfo" string="Third party orders"/>
                </button>
            </div>
            <notebook position="inside">
                <page name="third_party" string="Third party" attrs="{'invisible': [('third_party_order', '=', False)]}">
                    <group>
                        <group>
                            <field name="third_party_partner_id"
                                   context="{'default_supplier': True, 'default_customer': False}"
                                   attrs="{'required': [('third_party_order', '=', True)]}"/>
                        </group>
                        <group>
                            <field name="third_party_number"/>
                            <field name="third_party_move_id"/>
                        </group>
                            <group name="incoming_payment" string="Incoming Payment">
                                <field name="third_party_customer_in_state" string="Status" attrs="{'invisible': [('third_party_move_id','=', False)]}"/>
                                <field name="third_party_customer_in_residual" string="Pending amount" attrs="{'invisible': [('third_party_move_id','=', False)]}"/>
                                <field name="third_party_customer_in_residual_company" string="Pending amount in company currency" attrs="{'invisible': [('third_party_move_id','=', False)]}"/>
                            </group>
                            <group name="outgoing_payment" string="Outgoing Payment">
                                <field name="third_party_customer_out_state" string="Status" attrs="{'invisible': [('third_party_move_id','=', False)]}"/>
                                <field name="third_party_customer_out_residual" string="Pending amount" attrs="{'invisible': [('third_party_move_id','=', False)]}"/>
                                <field name="third_party_customer_out_residual_company" string="Pending amount in company currency" attrs="{'invisible': [('third_party_move_id','=', False)]}"/>
                            </group>
                    </group>
                </page>
            </notebook>
            <xpath expr="//field[@name='order_line']/tree//field[@name='price_unit']"
                   position="after">
                <field name="third_party_price"
                       attrs="{'invisible': [('parent.third_party_order', '=', False)]}"/>
                <field name="third_party_product_id" attrs="{'invisible': [('parent.third_party_order', '=', False)]}"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/form//field[@name='price_unit']"
                   position="after">
                <field name="third_party_price"
                       attrs="{'invisible': [('parent.third_party_order', '=', False)]}"/>
                <field name="third_party_product_id" attrs="{'invisible': [('parent.third_party_order', '=', False)]}"/>
            </xpath>
        </field>
    </record>

    <record id="view_order_form_button" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_third_party.view_order_form"/>
        <field name="arch" type="xml">
            <button name="print_quotation" position="after">
                <button type="action" name="third_party_invoice_print"
                        class="oe_highlight"
                        string="Print Third Party Invoice" attrs="{'invisible': [('third_party_number','=', False)]}"
                />
            </button>
        </field>
    </record>

</odoo>