<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_shipping_id" position="after">
                <field name="third_party_order"/>
            </field>
            <div name="button_box" position="inside">
                <button name="action_view_third_party_order"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-pencil-square-o"
                    attrs="{'invisible': [('third_party_order_count', '=', 0)]}">
                    <field name="third_party_order_count" widget="statinfo" string="Third party orders"/>
                </button>
            </div>
            <notebook position="inside">
                <page name="third_party" string="Third party" attrs="{'invisible': [('third_party_order', '=', False)]}">
                    <group>
                        <group>
                            <field name="third_party_partner_id"/>
                        </group>
                        <group>
                            <field name="third_party_number"/>
                            <button type="action" name="third_party_invoice_print"
                                    string="print" attrs="{'invisible': [('third_party_number','=', False)]}"
                            />
                            <field name="third_party_move_id"/>
                            <field name="third_party_customer_state" attrs="{'invisible': [('third_party_move_id','=', False)]}"/>
                            <field name="third_party_customer_amount" attrs="{'invisible': [('third_party_move_id','=', False)]}"/>
                        </group>
                    </group>
                </page>
            </notebook>
            <xpath expr="//field[@name='order_line']/tree//field[@name='price_unit']"
                   position="after">
                <field name="third_party_price"
                       attrs="{'invisible': [('parent.third_party_order', '=', False)]}"/>
                <field name="third_party_product_id" attrs="{'invisible': [('parent.third_party_order', '=', False)]}"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/form//field[@name='price_unit']"
                   position="after">
                <field name="third_party_price"
                       attrs="{'invisible': [('parent.third_party_order', '=', False)]}"/>
                <field name="third_party_product_id" attrs="{'invisible': [('parent.third_party_order', '=', False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>